    <data>

        <variable
            name="viewModel"
            type="{{ cookiecutter.package_dir }}.viewmodel.SampleViewModel" />

    </data>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Button
